<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/item_bataille">


    <TextView android:text="@string/nom" android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_marginLeft="40dp">
    </TextView>


    <TextView android:text="@string/date_creation" android:id="@+id/dateCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_marginLeft="180dp">
    </TextView>

    <TextView android:text="@string/date_fin" android:id="@+id/dateFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginLeft="110dp">
    </TextView>


    <TextView android:text="@string/equipe1" android:id="@+id/equipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginLeft="250dp">
    </TextView>

    <TextView android:text="@string/equipe2" android:id="@+id/equipe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginLeft="250dp">
    </TextView>


</RelativeLayout>